# Qdrant connection
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=orpheus_songs
FRAME_COLLECTION=orpheus_frames
# QDRANT_API_KEY=your_key_here   # Only needed for Qdrant Cloud

# Ingestion scheduler
SONGS_PER_RUN=2
SCHEDULE_HOURS=3

# Frame extraction windows
FRAME_WINDOW_S=5.0
FRAME_HOP_S=2.5

# Audio scratch directory (deleted after each run)
SCRATCH_DIR=./scratch

# Optional: path to ffmpeg if not on PATH
# FFMPEG_PATH=C:/ffmpeg/bin/ffmpeg.exe
